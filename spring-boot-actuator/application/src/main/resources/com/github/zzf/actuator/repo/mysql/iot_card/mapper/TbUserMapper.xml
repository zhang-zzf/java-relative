<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.zzf.actuator.repo.mysql.iot_card.mapper.TbUserMapper">
  <!-- 通用查询映射结果 -->
  <resultMap id="BaseResultMap"
    type="com.github.zzf.actuator.repo.mysql.iot_card.entity.TbUser">
    <id column="id" property="id"/>
    <result column="type" property="type"/>
    <result column="username" property="username"/>
    <result column="password" property="password"/>
    <result column="user_no" property="userNo"/>
    <result column="admin_user_no" property="adminUserNo"/>
    <result column="created_at" property="createdAt"/>
    <result column="updated_at" property="updatedAt"/>
  </resultMap>

  <!-- 通用查询结果列 -->
  <sql id="Base_Column_List">
    id,
    type,
    username,
    password,
    user_no,
    admin_user_no,
    created_at,
    updated_at
  </sql>

  <select id="selectByUserNo" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from tb_user
    where user_no = #{userNo}
  </select>

</mapper>
